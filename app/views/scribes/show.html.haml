- content_for :title, "Scribe | National federation of the blind maharashtra - pune region"
- model_class = Scribe
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @scribe.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @scribe.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @scribe.email
%p
  %strong= model_class.human_attribute_name(:mobile) + ':'
  %br
  = @scribe.mobile
%p
  %strong= model_class.human_attribute_name(:qualification) + ':'
  %br
  = @scribe.qualification


= link_to t('.back', :default => t("helpers.links.back")), root_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_scribe_path(@scribe), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), scribe_path(@scribe), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
