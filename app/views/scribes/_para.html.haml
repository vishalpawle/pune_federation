- model_class = Scribe
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:mobile)
      %th= model_class.human_attribute_name(:qualification)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @scribes.each do |scribe|
      %tr
        %td= link_to scribe.id, scribe_path(scribe)
        %td= scribe.first_name
        %td= scribe.last_name
        %td= scribe.email
        %td= scribe.mobile
        %td= scribe.qualification
        %td=l scribe.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_scribe_path(scribe), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), scribe_path(scribe), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_scribe_path, :class => 'btn btn-primary'
